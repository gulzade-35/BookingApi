@model BookingApi.Models.HotelDetailViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    @await Component.InvokeAsync("_HeadComponentPartial")
    <link rel="stylesheet" href="~/deluxe-master/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/deluxe-master/css/owl.theme.default.min.css" />
</head>
<body>

    @await Component.InvokeAsync("_NavbarComponentPartial")


    <div class="hero-wrap" style="background-image: url('/deluxe-master/images/bg_1.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
                <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                    <div class="text">
                        <p class="breadcrumbs mb-2" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Ana Sayfa</a></span> <span class="mr-2"><a href="rooms.html">Oda</a></span> <span>@Model.Name</span></p>
                        <h1 class="mb-4 bread">@Model.Name</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <section class="ftco-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-md-12 ftco-animate">
                            <div class="single-slider owl-carousel">
                                @if (Model.Photos != null && Model.Photos.Any())
                                {
                                    foreach (var photo in Model.Photos)
                                    {
                                        <div class="item">
                                            <div class="room-img" style="background-image: url('@photo');"></div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="item">
                                        <div class="room-img" style="background-image: url('/deluxe-master/images/default-room.jpg');"></div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-md-12 room-single mt-4 mb-5 ftco-animate">
                            <p>@Model.Description</p>
                        </div>

                        <div class="col-md-12 properties-single ftco-animate mb-5 mt-4">
                            <h4 class="mb-4">Değerlendirme &amp; Puanlar</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="star-rating">
                                       <div class="rate">
                                           
                                           @{
                                                var reviewScore = Model.reviewScore;
                                                var reviewCount = Model.reviewCount;
                                                var reviewWord = Model.reviewScoreWord;
                                                var fullStar = (int)Math.Floor(reviewScore / 2);
                                                var hasHalfStar = (reviewScore % 2) >= 1;
                                                var emptyStar = 5 - fullStar - (hasHalfStar ? 1 : 0);
                                           }

                                            @for (int i = 0; i < fullStar; i++)
                                            {
                                                <i class="icon-star"></i>
                                            }
                                            @if (hasHalfStar)
                                            {
                                                <i class="icon-star-half-empty"></i>
                                            }
                                            @for (int i = 0; i < emptyStar; i++)
                                            {
                                                <i class="icon-star-o"></i>
                                            }

                                            <span>@reviewCount Değerlendirme</span>
                                            <p><strong>Puan:</strong> @reviewScore.ToString("0.0") / 10</p>
                                            <p><strong>Yorum:</strong> @reviewWord</p>
                                       </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                       

                    </div>
                </div>
            </div>
        </div>
    </section> <!-- .section -->
    <section class="instagram pt-5">
        <div class="container-fluid">
            <div class="row no-gutters justify-content-center pb-5">
                <div class="col-md-7 text-center heading-section ftco-animate">
                    <h2><span>Otel Fotoğrafları</span></h2>
                </div>
            </div>
            <div class="row no-gutters">
                @if (Model.Photos != null && Model.Photos.Any())
                {
                    foreach (var photo in Model.Photos.Take(8))
                    {
                        <div class="col-sm-12 col-md ftco-animate">
                            <a href="@photo" class="insta-img image-popup" style="background-image: url('@photo');">
                                <div class="icon d-flex justify-content-center">
                                    <span class="icon-instagram align-self-center"></span>
                                </div>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <p>Fotoğraf bulunmamaktadır.</p>
                }
            </div>
        </div>
    </section>
    @await Component.InvokeAsync("_FooterComponentPartial")

    @await Component.InvokeAsync("_ScriptComponentPartial")

</body>
</html>

<script src="~/deluxe-master/js/owl.carousel.min.js"></script>
<script>
    $(document).ready(function () {
        $('.owl-carousel').owlCarousel({
            items: 1,
            loop: true,
            autoplay: true,
            nav: true,
            dots: true
        });
    });
</script>